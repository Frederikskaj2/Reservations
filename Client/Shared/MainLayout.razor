@inherits LayoutComponentBase
@inject IBootstrapCss BootstrapCss

<nav class="top-bar">
    <div class="logo">Frederikskaj&nbsp;2</div>
    <NavLink href="" class="nav-tab" Match="NavLinkMatch.All">
        <div>Fælleshus</div>
    </NavLink>
    <NavLink href="calendar" class="nav-tab">
        <div>Kalender</div>
    </NavLink>
    <NavLink href="my-reservations" class="nav-tab">
        <div>Mine reservationer</div>
    </NavLink>
    <User />
</nav>
<main>
    @Body
</main>

@code
{
    private bool isBootstrapLoaded;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !isBootstrapLoaded)
        {
            await BootstrapCss.SetBootstrapCss("4.4.1");
            isBootstrapLoaded = true;
        }
    }
}
