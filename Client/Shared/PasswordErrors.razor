@if (PasswordTooShort)
{
    <text>Din adgangskode skal bestå af mindst fire tegn. </text>
}
@if (PasswordRequiresLower)
{
    <text>Din adgangskode skal indeholde mindst ét lille bogstav. </text>
}
@if (PasswordRequiresUpper)
{
    <text>Din adgangskode skal indeholde mindst ét stort bogstav. </text>
}
@if (PasswordRequiresDigit)
{
    <text>Din adgangskode skal indeholde mindst ét tal. </text>
}
@if (PasswordRequiresNonAlphanumeric)
{
    <text>Din adgangskode skal indeholde mindst ét tegn som ikke er et bogstav eller et tal. </text>
}
@if (PasswordRequiresUniqueChars)
{
    <text>Din adgangskode må ikke være en gentagelse af kun ét eller to forskellige tegn.</text>
}

@code {

    [Parameter]
    public bool PasswordTooShort { get; set; }

    [Parameter]
    public bool PasswordRequiresLower { get; set; }

    [Parameter]
    public bool PasswordRequiresUpper { get; set; }

    [Parameter]
    public bool PasswordRequiresDigit { get; set; }

    [Parameter]
    public bool PasswordRequiresNonAlphanumeric { get; set; }

    [Parameter]
    public bool PasswordRequiresUniqueChars { get; set; }

}
