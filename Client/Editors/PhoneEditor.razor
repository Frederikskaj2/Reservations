@using Frederikskaj2.Reservations.Shared.Web
<Field>
    <FieldLabel>Telefonnummer</FieldLabel>
    <FieldBody>
        <Validation Validator="@Validator.ValidatePhone">
            <TextEdit @ref="textEdit" InputMode="TextInputMode.Tel" Text="@Value" TextChanged="@ValueChanged" Disabled="@Disabled" MaxLength="@ValidationRules.MaximumPhoneLength">
                <Feedback>
                    <ValidationError/>
                </Feedback>
            </TextEdit>
        </Validation>
    </FieldBody>
</Field>
