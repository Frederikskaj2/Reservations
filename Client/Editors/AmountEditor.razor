<Field Horizontal="true">
    <FieldLabel ColumnSize="ColumnSize.Is4">Beløb</FieldLabel>
    <FieldBody ColumnSize="ColumnSize.Is8">
        <Validation Validator="@Validator.ValidateAmount">
            <NumericEdit Min="0" Max="@MaximumValue" Value="@Value" ValueChanged="@ValueChanged" EnableStep="false" SelectAllOnFocus="true" Autofocus="@AutoFocus">
                <Feedback>
                    <ValidationError />
                </Feedback>
            </NumericEdit>
        </Validation>
    </FieldBody>
</Field>
