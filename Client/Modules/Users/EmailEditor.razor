@using ValidationRule = Frederikskaj2.Reservations.Core.ValidationRule
<Field>
    <FieldLabel>Mail</FieldLabel>
    <FieldBody>
        <Validation Validator="@Validator.ValidateEmail">
            <TextEdit
                @ref="textEdit"
                Role="@TextRole.Email"
                Text="@Value"
                TextChanged="ValueChanged"
                Disabled="Disabled"
                MaxLength="ValidationRule.MaximumEmailLength"
                autocomplete="username">
                <Feedback>
                    <ValidationError/>
                </Feedback>
            </TextEdit>
        </Validation>
    </FieldBody>
</Field>
