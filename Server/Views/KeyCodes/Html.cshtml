@model KeyCodesModel
@inject CultureInfo CultureInfo
@{
    var orderedResources = Model.Resources.Values.OrderBy(resource => resource.Sequence);
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "https://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="https://www.w3.org/1999/xhtml">
<head>
    <title>Nøglebokskoder</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0 " />
    <style>
    </style>
</head>
<body>
    <p>Hej @Model.Name</p>
    <p>Her er de aktuelle nøglebokskoder for den kommende tid:</p>
    <table>
        <thead>
            <tr>
                <th style="padding: 8px; text-align: left; border-top: solid 1px #CCC; border-bottom: solid 2px #CCC; border-collapse: collapse">Uge</th>
                <th style="padding: 8px; text-align: left; border-top: solid 1px #CCC; border-bottom: solid 2px #CCC; border-collapse: collapse">Dato</th>
                @foreach (var resource in orderedResources)
                {
                    <th style="padding: 8px; text-align: center; border-top: solid 1px #CCC; border-bottom: solid 2px #CCC; border-collapse: collapse">@resource.Name</th>
                }
            </tr>
        </thead>
        <tbody>
            @{
                var pattern = LocalDatePattern.Create("d. MMMM yyyy", CultureInfo);
                @foreach (var weeklyKeyCodes in Model.WeeklyKeyCodes)
                {
                    <tr>
                        <th style="padding: 8px; text-align: left; border-top: solid 1px #CCC; border-collapse: collapse">@weeklyKeyCodes.WeekNumber</th>
                        <td style="padding: 8px; text-align: left; border-top: solid 1px #CCC; border-collapse: collapse">@pattern.Format(weeklyKeyCodes.Date)</td>
                        @foreach (var resource in orderedResources)
                        {
                            <td style="padding: 8px; text-align: center; border-top: solid 1px #CCC; border-collapse: collapse">@(weeklyKeyCodes.Codes.TryGetValue(resource.Id, out var code) ? code : string.Empty)</td>
                        }
                    </tr>
                }
            }
        </tbody>
    </table>
    @await Html.PartialAsync("_Signature", Model)
</body>
