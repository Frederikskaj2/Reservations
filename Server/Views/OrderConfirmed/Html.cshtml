@model OrderConfirmedModel
@inject CultureInfo CultureInfo
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "https://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="https://www.w3.org/1999/xhtml">
<head>
    <title>Bestilling godkendt</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0 " />
    <style>
    </style>
</head>
<body>
    <p>Hej @Model.Name</p>
@if (Model.Amount > 0)
{
    <p>Vi har modtaget din indbetaling af @Model.Amount.ToString("C0", CultureInfo) for <a href="@Model.Url">bestilling @Model.OrderId</a>.</p>
    <p>Din bestilling er nu godkendt.</p>
}
else
{
    <p>Du har nu indbetalt det krævede beløb for <a href="@Model.Url">bestilling @Model.OrderId</a>, og din bestilling er nu godkendt.</p>
}
@if (Model.ExcessAmount > 0)
{
    <p>Det overskydne beløb på @Model.ExcessAmount.ToString("C0", CultureInfo) vil blive udbetalt til den bankkonto du oplyste da du afgav din bestilling.</p>
}
    @await Html.PartialAsync("_Signature", Model)
    @await Html.PartialAsync("_Links", Model)
</body>