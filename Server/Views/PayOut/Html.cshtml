@model PayOutModel
@inject CultureInfo CultureInfo
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "https://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="https://www.w3.org/1999/xhtml">
<head>
    <title>Udbetaling</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0 " />
</head>
<body>
    <p>Hej @Model.Name</p>
    <p>Vi har udbetalt @Model.Amount.ToString("C0", CultureInfo) til den bankkonto oplyste da du afgav din seneste bestilling.</p>
    <p>Bemærk at der kan gå nogle dage før pengene er til rådighed på din konto.</p>
    @await Html.PartialAsync("_Signature", Model)
    <p><a href="@($"{Model.FromUrl}/{Urls.MyTransactions}")" />Dit kontoudtog</a> • <a href="@($"{Model.FromUrl}/{Urls.MyAccount}")" />Din konto</a></p>
</body>